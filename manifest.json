{
    "manifest_version": 2,
    "name": "Source Academy Assignments",
    "version": "1.0",
    "description": "Keeps track of assignments on source academy for CS1101S",
    "icons": {
        "128": "assets/img/icon128.png",
        "48": "assets/img/icon48.png",
        "16": "assets/img/icon16.png"
    },
    "browser_action": {
        "default_icon": "assets/img/icon16.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": ["https://sourceacademy.nus.edu.sg/*"],
            "js": ["content.js", "assets/js/jquery-3.5.1.min.js"]
        }
    ],

    "permissions": [
        "tabs",
        "https://sourceacademy.nus.edu.sg/*",
        "storage",
        "debugger"
    ]
}